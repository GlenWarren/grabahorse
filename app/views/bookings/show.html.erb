<div class="booking-message">
  <p>
  <% if @booking.status == "pending"  %>
    <p class="booking-pending">Your booking is <%= @booking.status %></p>
  <% elsif @booking.status == "Accepted" %>
    <p class="booking-accepted">Your booking is <%= @booking.status %></p>
  <% else @booking.status == "Rejected" %>
    <p class="booking-rejected">Your booking is <%= @booking.status %></p>
  <% end %>
   <div class="text-center"> <strong>You can see the details of your booking in your dashboard.</strong></div>
 </p>
</div>
<div class="banner" style="background-image: url('<%= cl_image_path @booking.horse.image, crop: :scale %>')">
</div>

<div class="container d-flex mt-3">
  <div class="booking-info">
    <h3>Booking summary</h3>
    <br>
    <h6> Booking Start Date <%= @booking.start_date %></h6>
    <h6> Booking End Date <%= @booking.end_date %></h6>
    <h6> Horse Name is <strong><%= @booking.horse.name %></strong></h6>
    <h6> Horse Owner <%= @booking.horse.user.email %></h6>
    <br>
    <h6> Total Price <strong><%= @booking.total_price %> €</strong></h6>
  </div>
