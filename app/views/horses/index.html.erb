  <h1 class="m-3 text-center">Anyone take your <strong>fancy?</strong></h1>
  <div class="content">
    <div class="cards">
      <% @horses.each do |horse| %>
      <div class="card">
        <%= cl_image_tag horse.image, height: 150 %>
        <div class="card-info mt-2">
          <div class="card-details">
            <div class="card-title ml-3">
              <h5><%= horse.name %></h5>
              <h6><%= horse.location %></h6>
            </div>
            <h6 class="mr-3"><%= horse.price %> â‚¬</h6>
          </div>
          <%= link_to 'View', horse_path(horse), class: "btn btn-flat card-button border" %>
        </div>
      </div>
      <% end %>
    </div>
    <%= image_tag "map-img.png", alt: "map", id: "map" %>
  </div>
